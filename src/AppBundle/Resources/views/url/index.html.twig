{% extends "::base.html.twig" %}
{% set title = 'List Urls' %}

{% block body %}
    <a href="{{ path('url_new') }}" class="btn">New</a>
    <div class="row">
        <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>Url</th>
                    <th>Status</th>
                    <th>Key status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for url in urls %}
                    <tr>
                        <td>{{ url.url}}</td>
                        <td>{{ url.status}}</td>
                        <td>{{ url.keyStatus }}</td>
                        <td><a href="{{ path('url_delete', {slug: url.slug}) }}" class="btn">Delete</a> </td>
                        <td><a href="{{ path('url_edit', {slug: url.slug}) }}" class="btn">Edit</a> </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
</div>
    </div>
    <ul class="col-md-12">

    </ul>

{% endblock %}

